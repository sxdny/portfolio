---
import projects from "../data/projects.json";
import languages from "../data/languages.json";
import frameworks from "../data/frameworks.json";
import education from "../data/education.json";
import tools from "../data/tools.json";

import { sliceArr } from "../js/functions.js";

let newLanguages = sliceArr(languages);
---

<main class="flex flex-col gap-8">

  <div class="flex flex-col gap-4 mb-8">
    <p class="text-neutral-300 pb-3">
      I'm a web and iOS developer who likes to develop high quality, beautiful
      and performant applications. I'm currently looking for a web dev job, so
      if you have a job opportunity for me, please contact me at:
    </p>

    <ul class="flex gap-4 mb-6">
      <li>
        <a
          class="text-neutral-200 font-mono underline underline-offset-4"
          href="mailto:sidney@sxdny.dev"
        >
          Email
        </a>
      </li>
      <li>
        <a
          class="text-neutral-200 font-mono underline underline-offset-4"
          href="https://www.linkedin.com/in/devsidney/"
        >
          LinkedIn
        </a>
      </li>
    </ul>

    <div class="flex flex-col mb-8">
      <h2 class="text-neutral-200 text-3xl font-mono pb-3">Projects</h2>
      <hr class="h-px my-1 border-0 bg-neutral-700 mb-3" />
      <div
        class="text-neutral-400 text-sm flex flex-col gap-2 leading-6 tracking-wide text-pretty"
      >
        <ul class="gap-6 flex flex-col py-2">
          {
            projects.map((project) => (
              <li class="flex flex-col gap-2 mr-auto">
                <div>
                  <a
                    class="text-xl text-neutral-200 font-mono underline underline-offset-4"
                    href={project.url}
                  >
                    {project.name}
                  </a>
                  <p class="text-sm max-w-6xl text-pretty pt-1">
                    {project.description}
                  </p>
                </div>
                <ul class="flex gap-4 bg-neutral-800 px-3 py-1 border border-neutral-700 rounded-sm mr-auto">
                  {project.technologies.map((technology) => (
                    <li class="text-neutral-400 text-xs font-mono">
                      {technology}
                    </li>
                  ))}
                </ul>
              </li>
            ))
          }
        </ul>
      </div>
    </div>

    <div class="flex flex-col mb-8">
      <h2 class="text-neutral-200 text-3xl font-mono pb-3">Education</h2>
      <hr class="h-px my-1 border-0 bg-neutral-700 mb-3" />
      <div
        class="text-neutral-400 text-sm flex flex-col gap-2 leading-6 tracking-wide text-pretty"
      >
        <ul class="flex flex-col gap-6">
          {
            education.map((degree) => (
              <li class="flex flex-col gap-2 mr-auto">
                <h3 class="text-lg text-neutral-200 font-mono">
                  {degree.name}
                </h3>
                <div class="flex gap-2 items-center">
                  <p class="text-sm text-pretty">{degree.school}</p>
                  <p>Â·</p>
                  <p class="text-xs text-pretty">
                    {degree.startDate} - {degree.endDate}
                  </p>
                </div>
              </li>
            ))
          }
        </ul>
      </div>
    </div>

    <div>
      <h2 class="text-neutral-200 text-3xl font-mono pb-3">Skills</h2>
      <hr class="h-px my-1 border-0 bg-neutral-700" />
      <div
        class="text-neutral-400 text-sm flex flex-col gap-2 leading-6 tracking-wide text-pretty"
      >
        <ul class="gap-6 flex flex-col py-6">
          <li class="flex flex-col gap-2 mr-auto">
            <h3 class="text-lg text-neutral-200 font-mono">Languages</h3>
            <div class="flex flex-col gap-4">
              {
                newLanguages.map((languageGroup) => (
                  <ul
                    class="flex gap-4 bg-neutral-800 px-3 py-1 border border-neutral-700 rounded-sm mr-auto"
                  >
                    {
                      languageGroup.map((language: String) => (
                        <li class="text-neutral-400 text-xs font-mono">
                          {language}
                        </li>
                      ))
                    }
                  </ul>
                ))
              }
            </div>
          </li>

          <li class="flex flex-col gap-2 mr-auto">
            <h3 class="text-lg text-neutral-200 font-mono">Frameworks</h3>
            <ul
              class="flex gap-4 bg-neutral-800 px-3 py-1 border border-neutral-700 rounded-sm mr-auto"
            >
              {
                frameworks.map((framework) => (
                  <li class="text-neutral-400 text-xs font-mono">
                    {framework}
                  </li>
                ))
              }
            </ul>
          </li>

          <li class="flex flex-col gap-2 mr-auto">
            <h3 class="text-lg text-neutral-200 font-mono">Tools</h3>
            <ul
              class="flex gap-4 bg-neutral-800 px-3 py-1 border border-neutral-700 rounded-sm mr-auto"
            >
              {
                tools.map((tool) => (
                  <li class="text-neutral-400 text-xs font-mono">{tool}</li>
                ))
              }
            </ul>
          </li>
        </ul>
      </div>
    </div>
  </div>
</main>
